<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.romero.bodadedouglas.MainActivity">


    <View
        android:id="@+id/puerta"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:layout_marginBottom="50dp"
        />

    <RelativeLayout
        android:id="@+id/cont1"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/mesa1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Karla" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa1"
            android:layout_toLeftOf="@id/mesa1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Sebas" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa1"
            android:layout_toLeftOf="@id/mesa1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Silla"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/mesa1"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/mesa1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Hugo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Silla" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mesa1"
            android:layout_toRightOf="@id/mesa1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Silla" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cont2"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/mesa2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Douglas" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa2"
            android:layout_toLeftOf="@id/mesa2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Novia"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Silla"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mesa2"
            android:layout_toRightOf="@id/mesa2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Silla" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:text="Silla" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cont3"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/mesa3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Amigo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa3"
            android:layout_toLeftOf="@id/mesa3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Amigo1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa3"
            android:layout_toLeftOf="@id/mesa3"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Silla"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mesa3"
            android:layout_toRightOf="@id/mesa3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Silla" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Pedro"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cont4"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/mesa4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:text="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="Silla" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/mesa4"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@id/mesa4"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Obdulio"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/mesa4"
            android:layout_toLeftOf="@id/mesa4"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Sara"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textAppearance="@style/TextAppearance.AppCompat"

            android:text="Carlos"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/mesa4"
            android:layout_toRightOf="@id/mesa4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Silla" />
    </RelativeLayout>

</RelativeLayout>